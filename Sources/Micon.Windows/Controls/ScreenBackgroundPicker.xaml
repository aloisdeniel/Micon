<UserControl x:Class="Micon.Windows.Controls.ScreenBackgroundPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Micon.Windows.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel VerticalAlignment="Bottom" Margin="10">
        <Button x:Name="light" Click="OnClick" Width="20" Height="20" BorderThickness="2" BorderBrush="Transparent" Background="{StaticResource MiconLightBackgroundBrush}" />
        <Button x:Name="dark" Click="OnClick" Width="20" Height="20" BorderThickness="2" BorderBrush="{StaticResource MiconAccentBrush}" Background="{StaticResource MiconSemiDarkBackgroundBrush}" Margin="0,10,0,0" />
        <TextBlock Text="BG" TextAlignment="Center" Foreground="{StaticResource MiconSemiDarkBackgroundBrush}" FontSize="9" Margin="0,10,0,0" />
    </StackPanel>
</UserControl>
