<Window x:Class="Micon.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Micon.Windows"
        xmlns:controls="clr-namespace:Micon.Windows.Controls"
        mc:Ignorable="d"
        Title="Micon" Height="512" Width="800" MinHeight="512" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ScrollViewer>
            <StackPanel Margin="20">
                <controls:ImagePicker Title="Logo" Description="The main logo of your icon" Path="{Binding LogoPath, Mode=TwoWay}" />
                <controls:ImagePicker Title="Background" Description="The background image of your icon. It will be stretched for all tiles." Margin="0,20,0,0" />
                <Button Content="EXPORT" Margin="10,20,0,0" Padding="5" />
            </StackPanel>
        </ScrollViewer>
        
        <Grid Grid.Column="1" Background="{StaticResource MiconDarkBackgroundBrush}">
            <controls:SmallPreviewPanel x:Name="smallPanel" Visibility="Collapsed" />
            <controls:WidePreviewPanel x:Name="widePanel" />
        </Grid>
        
    </Grid>
</Window>
